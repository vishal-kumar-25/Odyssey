<% layout("/layouts/boilerplate") %>
<div class="row-8">
    <div class="col-6 boffset-2">
    <h3>Create a new Listing</h3>
    <form method="POST" action="/listings" novalidate class=""needs-validation>
      <div class="mb-3"> <label for="title" class="form-label">Title</label>
        <input name="listing[title]" 
        placeholder="enter title" 
        type="text"
        class="form-control">
    </div> 
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
        <textarea
         name="listing[description]" 
        placeholder="enter description"></textarea>
    </div>
        <br/><br />

        <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input name="listing[image]"
         placeholder="enter image URL/Link"
          type="text"
          class="form-control">
        
        </div>

        <br/><br/>

        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
        <input name="listing[price]" placeholder="enter price" type="number" class="form-control">
    </div>

        <br/><br />

        <div class="mb-3">     
            <label for="country" class="form-label">Country</label>
             <input name="listing[country]" placeholder="enter country" type="text" class="form-control">
        </div>

        <br/><br />

        <div class="mb-3">
            <label for="location" class="form-label">location</label>  
                  <input name="listing[location]" placeholder="enter location" type="text" class="form-control">
        </div>

        <br/><br />
        <button class="btn btn-dark">Add</button>
    </div>
</div>
    </form>
